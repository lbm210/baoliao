/* pages/kefu/kefu.wxss */
.container{width:100%;padding:30rpx;box-sizing:border-box;}
.item{width:100%;padding:40rpx 0;border-bottom:1rpx solid #e2e2e2}
.tit{font-size:28rpx;color:#999;height:40rpx;line-height:40rpx;margin-bottom:50rpx}
.tit .label{width:86rpx;height:40rpx;text-align: center;background:#30c080;border-radius:4rpx;color:#fff;margin-right:10rpx}
.telphone,.weixin{height:60rpx;justify-content:space-between;font-size:28rpx;line-height:60rpx}
.weixin{margin-bottom:40rpx}
.tel{width:120rpx;height:60rpx;box-sizing:border-box;border:1rpx solid #30c080;text-align:center;line-height:58rpx;font-size:24rpx;color:#30c080;border-radius:30rpx}
.erweima{flex-direction: column;align-items: center}
.erweima>text{font-size:24rpx;color:#333}
.ewm{width:220rpx;height:220rpx;margin-bottom:20rpx}
.step{justify-content: center;align-items: flex-end}
.step-item {flex-direction: column;align-items: center}
.step-item .iconfont{font-size:50rpx;color:#30c080;margin-bottom:20rpx}
.step-item .txt{color:#999;line-height:20rpx}
.jiantou{line-height:24rpx;height:24rpx;font-size:24rpx;color:#999;margin:0 35rpx}
.bbs-txt{padding:0 50rpx 50rpx 50rpx;font-size:28rpx;color:#666;line-height:32rpx}
.item-box{width:100%;box-sizing: border-box;padding:30rpx 30rpx 0;border-radius:16rpx;box-shadow: 0 0 20rpx -10rpx rgba(0,0,0,.3);margin-bottom:30rpx;background:#fff}
.item-box .title{font-size:32rpx;color:#333;line-height:34rpx;font-weight:900}
.item-box .item:last-child{border-bottom: none}


