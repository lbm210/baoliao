/* pages/msg/msg.wxss */
.container{width:100%;padding:30rpx;box-sizing:border-box}
.item{width:100%;padding:30rpx 30rpx 0;background:#fff;border-radius:10rpx;box-shadow:0 4rpx 24rpx -6rpx rgba(0,0,0,.3);box-sizing:border-box;margin-bottom: 30rpx}
.item:last-of-type{margin-bottom: 0}
.tit{height:40rpx;align-items: center;font-size:28rpx;color:#333;line-height:28rpx}
.tit .tit-pic{width:40rpx;height:40rpx;margin-right:10rpx}
.txt{padding:44rpx 0 34rpx;font-size:28rpx;color:#333;line-height:40rpx;display:-webkit-box;overflow:hidden;text-overflow:ellipsis;-webkit-box-orient:vertical;-webkit-line-clamp:5}
.link{width:100%;height:80rpx;line-height:80rpx;font-size:28rpx;color:#333;position:relative;border-top:1rpx solid #e2e2e2}
.link:after{position:absolute;top:32rpx;right:-8rpx;content:"";width:0;height:0;border-top:8rpx solid transparent;border-bottom:8rpx solid transparent;border-right:10rpx solid transparent;border-left:10rpx solid #999;}
.hold-bottom{border-top: none}